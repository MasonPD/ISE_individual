<% provide(:title, @movie.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= @movie.name %>
      </h1>
      <h3>
        <%= link_to "Youtube Link", @movie.url %>
      </h3>
    </section>
    <section>
      <%= render 'shared/movie_stats' %>
    </section>
    <section>
      <%= render 'join_form' if signed_in? %>
    </section>
  </aside>
  <div class="span8">
    <% if @movie.microposts.any? %>
        <h3>Microposts (<%= @movie.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render partial:  'micropost', collection: @microposts %>
        </ol>
        <%= will_paginate @microposts%>
    <% end %>
  </div>
</div>